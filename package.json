{
  "name": "@condenast/tftest",
  "version": "2.0.0",
  "description": "Terraform test framework",
  "main": "bin/tftest",
  "scripts": {
    "postinstall": "npm run download-dependencies",
    "test": "istanbul cover jasmine -- --config=./jasmine.json && istanbul check-coverage coverage/coverage.json",
    "test-coverage": "istanbul cover jasmine -- --config=./jasmine.json",
    "lint": "semistandard",
    "lint-fix": "semistandard --fix | snazzy",
    "download-dependencies": "bin/tftest -j && chmod +x node_modules/.bin/tfjson",
    "docker-build": "docker build -t tftest ."
  },
  "bin": {
    "tftest": "bin/tftest"
  },
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint"
    }
  },
  "semistandard": {
    "ignore": [
      "spec/**"
    ]
  },
  "dependencies": {
    "commander": "^2.17.1",
    "jasmine": "^3.2.0",
    "jasmine-spec-reporter": "^4.2.1",
    "node-fetch": "2.2.0"
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.13",
    "istanbul": "^0.4.5",
    "semistandard": "^12.0.1",
    "snazzy": "^7.1.1"
  }
}
